
{% extends "layout.njk" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        Find teaching jobs
      </h1>

      <form>

        {{ govukInput({
          id: "keywords",
          name: "keywords",
          label: {
            text: "Keywords",
            classes: "govuk-label--m"
          }
        }) }}

        {{ govukInput({
          id: "location",
          name: "location",
          label: {
            text: "City, county or postcode",
            classes: "govuk-label--m"
          }
        }) }}

        {{ govukButton({
          text: 'Search',
          href: '/jobs'
        }) }}
      </form>

      <p><a href="/jobs">Browse all teaching jobs</a></p>





    </div>
  </div>

{% endblock %}
