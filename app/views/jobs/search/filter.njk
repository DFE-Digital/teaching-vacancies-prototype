    <li>{{ data['filter-role'] }}</li>
    <li>{{ data['filter-phase'] }}</li>
    <li>{{ data['filter-subjects'] }}</li>
    <li>{{ data['filter-suitability'] }}</li>
    <li>{{ data['filter-keyStages'] }}</li>
    <li>{{ data['filter-workingPatterns'] }}</li>
