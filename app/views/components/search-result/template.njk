{% from "govuk/components/tag/macro.njk"              import govukTag %}

{% for item in params.items %}
  <li class="vacancy">
    <h2 class="govuk-heading-m mb0">
        <a class="govuk-link view-vacancy-link" href="{{ item.jobUrl }}">{{ item.jobTitle }}</a>
    </h2>
    <p class="govuk-body">
      {{ item.jobLocation }}
    </p>
    {# <div class="tag-wrapper">
      <span class="govuk-visually-hidden">Role </span>

      {% for tag in item.tags %}
        {{govukTag({
          text: tag,
          classes: "govuk-tag--grey govuk-!-font-size-14"
        })}}
      {% endfor %}

    </div> #}
    <dl>
      {% if item.salaryFte %}
        <dt>Salary {% if item.salaryActual %}(FTE){% endif %}</dt>
        <dd class="double">
          <div class="dd-inner {% if item.salaryActual %} govuk-!-margin-bottom-1{% endif %}">{{ item.salaryFte }}</div>
          {% if item.salaryActual %}
            <span class="govuk-hint govuk-!-margin-bottom-0 govuk-!-font-size-16
      ">Actual salary</span> 
            <span class="dd-inner">{{ item.salaryActual }}</span>
          {% endif %}
        </dd>
      {% endif %}
      {% if item.salary %}
        <dt>Salary</dt>
        <dd class="double">
          <div class="dd-inner">{{ item.salary }}</div>
        </dd>
      {% endif %}
      <dt>School type</dt>
      <dd class="double">{{ item.schoolType }}</dd>
      <dt>Working pattern</dt>
      <dd class="double">{{ item.workPattern }}</dd>
      <dt>Closing date</dt>
      <dd class="double">{{ item.closingDate }}</dd>
    </dl>
  </li>
{% endfor %}