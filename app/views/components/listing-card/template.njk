<div class="app-job-listing-card">
  {% for item in params.items %}
    <div class="col">
        <a href="{{ item.jobUrl }}" class="govuk-link govuk-!-font-size-24 govuk-!-font-weight-bold">{{ item.jobName }}</a>
        {% if item.jobLocation %}
          <p class="govuk-hint govuk-!-font-size-16 govuk-!-margin-top-1 govuk-!-margin-bottom-0">{{ item.jobLocation }}</p>
        {% endif %}
    </div>
    <div class="col">
      <a class="govuk-!-font-size-19" href="/prototypes/application/round-4/hs/00-acc-applicants">Applications ({{ item.applicationCount }}) </a>
      <p class="govuk-!-font-size-16 govuk-!-margin-top-1"><span class="govuk-!-font-weight-bold">Closing date:</span> {{ item.jobClosingDate }}</p>
    </div>
    <div class="col">

    </div>
  {% endfor %}
</div>