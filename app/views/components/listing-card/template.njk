<div class="app-job-listing-card">
  {% for item in params.items %}
    <div class="col">
        <a href="{{ item.jobUrl }}" class="govuk-link govuk-!-font-size-24 govuk-!-font-weight-bold"> <span class="govuk-visually-hidden">View</span>{{ item.jobName }}</a>
        {% if data.job.userType == "multiSchoolMat" or data.job.userType == "multiSchoolLa" %}
          {% if item.jobLocation %}
            <p class="govuk-hint govuk-!-font-size-16 govuk-!-margin-top-1 govuk-!-margin-bottom-0">{{ item.jobLocation }}</p>
          {% endif %}
        {% endif %}
    </div>
    <div class="col">
      {% if item.applicationUrl %}
        <a class="govuk-!-font-size-19" href="{{ item.applicationUrl }}"><span class="govuk-visually-hidden">View</span> {{ item.applicationCount }} applications</a> <span class="govuk-visually-hidden">for {{ item.jobName }}</span>
      {% else %}
        <span class="govuk-!-font-size-19">0 applications</span>
      {% endif %}
      <dl class="govuk-!-font-size-16 govuk-!-margin-top-1"><dt><span class="govuk-!-font-weight-bold">Closing date:</span></dt> <dd>{{ item.jobClosingDate }}</dd></dl>
    </div>
  {% endfor %}
</div>