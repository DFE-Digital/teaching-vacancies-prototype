{% from "govuk/components/tag/macro.njk" import govukTag %}

<div class="app-applicant-card">
    <div class="col">
      {% if application.status != 'Withdrawn' %}
        <a href="applicant/{{ application.id }}" class="govuk-link govuk-!-font-size-24 govuk-!-font-weight-bold govuk-link--no-visited-state"> <span class="govuk-visually-hidden">View application for</span>{{ application.firstname }} {{ application.lastname }} </a>
        {% else %}
        <span class="app-withdrawn-applicant govuk-!-font-weight-bold govuk-!-font-size-24">{{ application.firstname }} {{ application.lastname }} </span>
      {% endif %}
    </div>
    <div class="col">
      {% include "includes/applications/application-status-tags.html" %}
      {% if application.status %}
        <dl class="govuk-!-font-size-16 govuk-!-margin-top-1">
          <div>
            <dt>
              <span class="govuk-!-font-weight-bold">Received on:</span>
            </dt>
            <dd>{{ application.recievedDateTime }}</dd>
          </div>
        </dl>
      {% else %}
      <dl class="govuk-!-font-size-16 govuk-!-margin-top-1 govuk-!-margin-bottom-5">
        <dt>
          <span class="govuk-!-font-weight-bold">Received on:</span>
        </dt>
        <dd>{{ application.recievedDateTime }}</dd>
        </dl>
      {% endif %}
    </div>
    <div class="col">
      {% if application.status == 'Unread' or application.status == 'Invited to interview' or application.status == 'Reviewed' %}
        <div class="app-applicant-actions">
          {% if application.status != 'Invited to interview' %}
            <a class="govuk-link govuk-link--no-visited-state" href="#">Invite to interview<span class="govuk-visually-hidden"> {{ application.name }}</span></a>
          {% endif %}
          <a class="govuk-link govuk-link--no-visited-state" href="#">Reject<span class="govuk-visually-hidden"> {{ application.name }}</span></a>
        </div>
      {% endif %}
    </div>

</div>
