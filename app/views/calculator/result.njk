{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">


        {% if data['payband'] == 'Leading Practitioner' or data['payband'] == 'Leadership' %} 

            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">Your current pay range is £43,523 to £65,685. It is estimated that your current pay range will increase to between £44,523 and £67,685 from 1 September 2023</h1>
                <div class="govuk-panel__body">
