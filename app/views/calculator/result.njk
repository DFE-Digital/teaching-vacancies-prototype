{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">


        {% if data['payband'] == 'Leading Practitioner' or data['payband'] == 'Leadership' %} 

            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">The pay range for {{data['payband'] }} will be between £44,523 and £67,685 from 1 September 2023</h1>
                <div class="govuk-panel__body">
                    This is a minimum increase of £1,231, which is a 5% pay rise   
                </div>
            </div>

        {% else %}

            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">The advisory pay point for {{data['payband'] }} will increase to £{{numberOne}} from 1 September 2023</h1>
                <div class="govuk-panel__body">
                   This is an increase of £1,231, which is a 5% pay rise
                </div>
            </div>

        {% endif %}

        <div class="govuk-inset-text">
            This calculator is indicative only. The new pay award is subject to a statutory consultation period and your school can choose how to implement it.
        </div>

        <h2 class="govuk-heading-m">Your answers</h2>

        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    What is your pay band?
                </dt>
                <dd class="govuk-summary-list__value">
                    {{data['payband'] }}
                </dd>
            </div>
            {% if data['appraisal'] == 'Yes' %}

                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        What do you expect your new pay band to be?
                    </dt>
                    <dd class="govuk-summary-list__value">
                        {{data['new-payband'] }}
                    </dd>
                </div>
            
            {% endif %}

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Where do you work?
                </dt>
                <dd class="govuk-summary-list__value">
                    {{data['where-do-you-work'] }}
                </dd>
            </div>
            
        </dl>

