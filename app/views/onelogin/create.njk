
{% extends "layout.njk" %}

{% set title = 'Create a jobseeker account' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        {{title}}
      </h1>

      <p>Create an account with GOV.UK One Login to save and apply for jobs or  <a class="govuk-link" href="login">sign in</a>.</p>

      <form method="post">

        {{ govukButton({
          text: 'Create an account on GOV.UK One Login'
        }) }}

      </form>

    </div>


  </div>

{% endblock %}
