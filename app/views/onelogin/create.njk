
{% extends "layout.njk" %}

{% set title = 'Create a jobseeker account' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        {{title}}
      </h1>

      <p>Create or sign in to your GOV.UK One Login account to save and apply for jobs.</p>

      <form method="post">

        {{ govukButton({
          text: 'Continue to GOV.UK One Login'
        }) }}

      </form>

    </div>
  </div>

{% endblock %}
