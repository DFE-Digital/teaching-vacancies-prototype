
{% extends "layout.njk" %}

{% set title = 'Check your email' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <div class="govuk-error-summary" data-module="govuk-error-summary">
            <div role="alert">
                <h2 class="govuk-error-summary__title">
                There is a problem
                </h2>
                <div class="govuk-error-summary__body">
                <ul class="govuk-list govuk-error-summary__list">
                    <li>
                        <a href="#">That authentication code is incorrect</a>
                    </li>
                </ul>
                </div>
            </div>
        </div>
   
      <h1 class="govuk-heading-l">
          {{title}}
      </h1>
    
        <p class="govuk-body">
          Email sent to:
        </p>

        <div class="govuk-inset-text">
            email@email.com
        </div>
        
        
        
      <form method="post" novalidate>

        <div class="govuk-form-group govuk-form-group--error">
            <h2 class="govuk-label-wrapper">
                <label class="govuk-label govuk-label--m" for="auth-code">
                  Authentication code
                </label>
            </h2>
            <div id="auth-code-hint" class="govuk-hint">
               Enter the code sent to your email address.
            </div>
            <p id="passport-issued-error" class="govuk-error-message">
              <span class="govuk-visually-hidden">Error:</span> That authentication code is incorrect
            </p>
            <input class="govuk-input govuk-input--width-10 govuk-input--error" id="auth-code" name="auth-code" type="text" aria-describedby="auth-code-hint" value="{{ data['auth-code'] }}">
        </div>

        {{ govukButton({
          text: "Continue"
        }) }}

         <p><a href="/onelogin/account">Cancel</a></p>

      </form>


    </div>


    <div class="govuk-grid-column-one-third">
      
      <p> <a class="govuk-notification-banner__link" href="/onelogin/emails/code" target="_blank">Email concept</a> offline step</p>
      <iframe src="/onelogin/emails/code" title="description" style="width:100%; height:500px"></iframe>

    </div>




  </div>

{% endblock %}
