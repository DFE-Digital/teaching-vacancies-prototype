
{% extends "layout.njk" %}

{% set title = 'Check your email' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
        <div class="govuk-notification-banner__header">
          <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
            Success
          </h2>
        </div>
        <div class="govuk-notification-banner__content">
          <h3 class="govuk-notification-banner__heading">
            Account found with that email address
          </h3>
        </div>
      </div>
   
      <h1 class="govuk-heading-l">
          {{title}}
      </h1>
    
        <p class="govuk-body">
          Email sent to:
        </p>

        <div class="govuk-inset-text">
            {{ data['oneloginemail'] }}
        </div>

        
      <form method="post" novalidate>

        <div class="govuk-form-group">
            <h2 class="govuk-label-wrapper">
                <label class="govuk-label govuk-label--m" for="auth-code">
                  Authentication code
                </label>
            </h2>
            <div id="auth-code-hint" class="govuk-hint">
               Enter the code sent to your email address.
            </div>
            <input class="govuk-input govuk-input--width-10" id="auth-code" name="auth-code" type="text" aria-describedby="auth-code-hint">
        </div>

        <div class="govuk-button-group">
          <button type="submit" class="govuk-button" data-module="govuk-button">
            Continue
          </button>
          <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button">
            Send code again
          </button>
        </div>

         <p><a href="/onelogin/account">Cancel</a></p>

      </form>


    </div>


    <div class="govuk-grid-column-one-third">
      
      <p> <a class="govuk-notification-banner__link" href="/onelogin/emails/code" target="_blank">Email concept</a> offline step</p>
      <iframe src="/onelogin/emails/code" title="description" style="width:100%; height:500px"></iframe>

    </div>




  </div>

{% endblock %}
