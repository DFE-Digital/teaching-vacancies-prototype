
{% extends "layout.njk" %}

{% set title = 'Jobseeker sign in' %}

{% block content %}
  <div class="govuk-grid-row">

     <div class="govuk-grid-column-full"> 

      <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
        <div class="govuk-notification-banner__header">
          <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
            Important
          </h2>
        </div>
        <div class="govuk-notification-banner__content">
          <h3 class="govuk-notification-banner__heading">
            How you log in to Teaching Vacancies is changing
          </h3>
          <p class="govuk-body">We are replacing Teaching Vacancies accounts with GOV.UK One Login. Ensure the email address on your account is the one you will use for logging into government services.</p>

          <p class="govuk-body">You can find out more about <a target="_blank" href="https://www.gov.uk/using-your-gov-uk-one-login">using a GOV.UK One Login</a>.</p>
        </div>
      </div>

    </div>

  
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        {{title}}
      </h1>

      <p>
        Sign in here if you are a teacher, aspiring teacher or work in education support. Once signed in you'll be able to save and apply for jobs.
      </p>

      <form method="post">

        {% if returnUrl %}
          <input type="hidden" name="returnUrl" value="{{query.returnUrl}}">
        {% endif %}

        {{ govukInput({
          label: {
            text: "Email address",
            classes: "govuk-label--m"
          },
          id: "email",
          name: "email",
          type: "email",
          autocomplete: "email",
          spellcheck: false
        }) }}

        {{ govukInput({
          id: "password",
          name: "password",
          label: {
            text: "Password",
            classes: "govuk-label--m"
          },
          type: "password"
        }) }}

        <p><a href="#">Forgotten your password?</a></p>

        {{ govukButton({
          text: 'Sign in'
        }) }}
      </form>

    </div>

    <div class="govuk-grid-column-one-third">
      <h2 class="govuk-heading-m">Don't have an account yet?</h2>
      <p class="govuk-body"><a class="govuk-link" href="/jobseekers/sign_up">Create an account</a> to save and apply for jobs you are interested in.</p>
    </div>

  </div>

{% endblock %}
