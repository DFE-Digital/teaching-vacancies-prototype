
{% extends "layout.njk" %}

{% set title = 'Create an account' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{title}}
      </h1>

      <form method="post" novalidate>

        {{ govukInput({
          label: {
            text: "Email address",
            classes: "govuk-label--m"
          },
          id: "emailAddress",
          name: "emailAddress",
          type: "email",
          autocomplete: "email",
          spellcheck: false
        }) }}

        {{ govukInput({
          id: "password",
          name: "password",
          label: {
            text: "Password",
            classes: "govuk-label--m"
          },
          type: "password",
          hint: {
            text: "Your password must be at least 8 characters long"
          }
        }) }}

        <div class="govuk-form-group">
          <fieldset class="govuk-fieldset" aria-describedby="accountType-hint">
              <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                  <h2 class="govuk-fieldset__heading">
                      What type of job are you looking for?
                  </h2>
              </legend>
              <div id="signIn-item-hint" class="govuk-hint">
                You can change this in your account at anytime.
            </div>
      
              <div class="govuk-radios" data-module="govuk-radios">
                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="accountType" name="accountType" type="radio" value="teaching">
                      <label class="govuk-label govuk-radios__label" for="accountType">
                          Teaching, teaching support and leadership jobs
                      </label>
                      <div id="signIn-item-hint" class="govuk-hint govuk-radios__hint">
                          This includes teacher, teaching assistant, learning support or cover supervisor, SEND and headteacher jobs.
                      </div>
                  </div>
                  
                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="accountType-2" name="accountType" type="radio" value="non-teaching">
                      <label class="govuk-label govuk-radios__label" for="accountType-2">
                          Non-teaching support jobs
                      </label>
                      <div id="sign-in-item-hint" class="govuk-hint govuk-radios__hint">
                          This includes all other schools jobs, for example, administration, HR, data and finance jobs.
                      </div>
                  </div>
              </div>
          </fieldset>
      </div>



        {{ govukButton({
          text: 'Create account'
        }) }}
      </form>




    </div>
  </div>

{% endblock %}
