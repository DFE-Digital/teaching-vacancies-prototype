
{% extends "layout.njk" %}

{% set title = 'Account created' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: title
      }) }}

      <p class="govuk-body">
        You can <a href="/jobs">search and apply for teaching jobs</a>.
      </p>

      <h2 class="govuk-heading-m">Create a profile</h2>

      {% for user in users %}

          <form method="post" action="/account/sign-in">

            {% if returnUrl %}
              <input type="hidden" name="returnUrl" value="{{query.returnUrl}}">
            {% endif %}

            <input type="hidden" name="emailAddress" value="{{user.emailAddress}}">

            <h2 class="govuk-heading-m govuk-!-margin-bottom-3">
              {{user.emailAddress}}
            </h2>

            <div class="govuk-!-margin-bottom-3">
              {% if user.profile.status %}
                {{ govukTag({
                  text: user.profile.status,
                  classes: 'govuk-tag--blue'
                }) }}
              {% else %}
                {{ govukTag({
                  text: 'Not activated yet',
                  classes: 'govuk-tag--red'
                }) }}

              {% endif %}
            </div>

            {{ govukButton({
              text: 'Sign in'
            }) }}
          </form>

      {% endfor %}

      <p class="govuk-body">
        With a profile, you can:
      </p>
      <ul class="govuk-list govuk-list--bullet">
        <li>
          share your qualifications and experience with schools
        </li>
        <li>
          specify the types of teaching jobs youâ€™re looking for
        </li>
         <li>
          apply for roles more quickly by pre-filling your information
        </li>
      </ul>


      <p class="govuk-body">
        When you turn on your profile it will be only be visible to hiring staff in schools and trusts. They can get in touch by email to invite you apply for roles.
      </p>

      <form method="post" novalidate>

        {{ govukButton({
          text: "Create a profile"
        }) }}

      </form>

    </div>
  </div>

{% endblock %}
