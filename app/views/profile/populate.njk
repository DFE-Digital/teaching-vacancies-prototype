
{% extends "layout.njk" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">Complete your profile from a previous application</h1>

      <p class="govuk-body">
        Because you have already submitted an application, some of your details can be imported to your profile. This includes your:
      </p>

      <ul class="govuk-list govuk-list--bullet">
        <li>personal details</li>
        <li>qualified teacher status (QTS)</li>
        <li>qualifications</li>
        <li>work history</li>
      </ul>

      <form method="post" action="">

        {{ govukButton({
          text: "Populate profile"
        }) }}

      </form>

    </div>
  </div>

{% endblock %}
