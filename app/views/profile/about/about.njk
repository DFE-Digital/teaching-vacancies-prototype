{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% set title = 'About you' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">
          About you and your experience
        </span>
        {{title}}
      </h1>

      <p>Include information about:</p>

      <ul class="govuk-list govuk-list--bullet">
        <li>
          working with pupils
        </li>
        <li>
          your teaching style and classroom management
        </li>
        <li>
          your knowledge of the curriculum
        </li>
        <li>
          your understanding of safeguarding and student wellbeing
        </li>
        <li>
          any extra training you’ve done
        </li>
        <li>
          additional responsibilities you’ve taken on in school
        </li>
        <li>
         experience in special educational needs and disability (SEND)
        </li>
        <li>
          any relevant interests or extra-curricular activities
        </li>
      </ul>


      <form method="post" novalidate>

        {{ govukCharacterCount({
          name: "profile[about]",
          id: "profile[about]",
          maxwords: 1000,
          label: {
            html: 'About you',
            isPageHeading: true,
            classes: 'govuk-label--m'
          },
          value: profile.about,
          rows: 10
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}

        <p><a href="/profile">Cancel</a></p>

      </form>

    </div>
  </div>

{% endblock %}
