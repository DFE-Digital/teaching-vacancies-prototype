{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-l">
        Equal opportunities and recruitment monitoring
      </span>

      <form method="post" novalidate>

        {{ govukRadios({
          id: "profile[ethnicGroup]",
          name: "profile[ethnicGroup]",
          fieldset: {
            legend: {
              text: "What is your ethnic group?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            text: "If the options do not reflect how you identify, select ‘Other ethnic group’."
          },
          items: [{
            value: options[0].value,
            text: options[0].text,
            hint: {
              text: options[0].hint
            },
            checked: options[0].checked
          },
          {
            value: options[1].value,
            text: options[1].text,
            checked: options[1].checked
          },
          {
            value: options[2].value,
            text: options[2].text,
            hint: {
              text: options[2].hint
            },
            checked: options[2].checked
          },
          {
            value: options[3].value,
            text: options[3].text,
            hint: {
              text: options[3].hint
            },
            checked: options[3].checked
          },
          {
            value: options[4].value,
            text: options[4].text,
            checked: options[4].checked
          },
          {
            divider: "or"
          },
          {
            value: options[5].value,
            text: options[5].text,
            checked: options[5].checked
          }]
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}

        <p><a href="/profile">Cancel</a></p>

      </form>

    </div>
  </div>

{% endblock %}
