
{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% set title = 'Roles' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

{{ govukErrorSummary({
titleText: "There is a problem",
errorList: [
  {
    text: "Select what roles you are interested in to continue",
    href: "#profile[firstName]"
  }
]
}) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set h1 %}
        <span class="govuk-caption-l">
          Job preferences
        </span>
        {{title}}
      {% endset %}

      <form method="post" novalidate>

       {{ govukCheckboxes({
          idPrefix: "profile[roles]",
          name: "profile[roles]",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: options,
          errorMessage: {
            text: "Select what roles you are interested in to continue"
          }
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}

        <p><a href="/profile">Cancel</a></p>
      </form>

    </div>
  </div>

{% endblock %}
