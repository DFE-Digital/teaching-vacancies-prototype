
{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% set title = 'Location' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

{{ govukErrorSummary({
titleText: "There is a problem",
errorList: [
  {
    text: "Enter a location",
    href: "#profile[firstName]"
  },
  {
    text: "Select a search radius",
    href: "#profile[firstName]"
  }
]
}) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">
        <span class="govuk-caption-xl">
          Job preferences
        </span>
        {{title}}
      </h1>



      <form method="post" novalidate>

        {{ govukInput({
          id: "profile[location]",
          name: "profile[location]",
          label: {
            text: "Location",
            classes: 'govuk-label--m'
          },
          errorMessage: {
            text: "Enter a location"
          },
          value: location
        }) }}

        {{ govukRadios({
          idPrefix: "profile[radius]",
          name: "profile[radius]",
          fieldset: {
            legend: {
              text: "Search radius",
              classes: "govuk-fieldset__legend--m"
            }
          },
          errorMessage: {
            text: "Select a search radius"
          },
          items: searchRadiusOptions
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}

        <p><a href="/profile">Cancel</a></p>
      </form>

    </div>
  </div>

{% endblock %}
