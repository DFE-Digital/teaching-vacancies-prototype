
{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% set title = 'What roles are you interested in?' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set h1 %}
        <span class="govuk-caption-l">
          Job preferences
        </span>
        {{title}}
      {% endset %}

      <form method="post" novalidate="">

        <h1 class="govuk-fieldset__heading">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <span class="govuk-caption-l">Job preferences</span> 
            What roles are you interested in?
          </legend>
        </h1>

        <div id="hint" class="govuk-hint">
          Select all that apply to set up your profile.
        </div>
      
        <div class="govuk-checkboxes" data-module="govuk-checkboxes">
            
            <p class="govuk-!-margin-top-6"><b>Teaching & leadership</b></p>
      
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-teacher-field" name="profile[roles]" type="checkbox" value="Teacher"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-teacher-field">Teacher</label>
            </div>
              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-head-of-year-or-phase-field" name="profile[roles]" type="checkbox" value="Head of year or phase"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-head-of-year-or-phase-field">Head of year or phase</label>
            </div>
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-head-of-department-or-curriculum-field" name="profile[roles]" type="checkbox" value="Head of department or curriculum"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-head-of-department-or-curriculum-field">Head of department or curriculum</label>
            </div>
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-assistant-headteacher-field" name="profile[roles]" type="checkbox" value="Assistant headteacher"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-assistant-headteacher-field">Assistant headteacher</label>
            </div>
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-deputy-headteacher-field" name="profile[roles]"type="checkbox" value="Deputy headteacher"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-deputy-headteacher-field">Deputy headteacher</label>
            </div>
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-headteacher-field" name="profile[roles]" type="checkbox" value="Headteacher"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-headteacher-field">Headteacher</label>
            </div>
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-headteacher-field" name="profile[roles]" type="checkbox" value="Other leadership roles"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-headteacher-field">Other leadership roles</label>
            </div>
            

            <p class="govuk-!-margin-top-4"><b>Support</b></p>

            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-teaching-assistant-field" name="profile[roles]" type="checkbox" value="Teaching assistant"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-teaching-assistant-field">Teaching assistant</label>
            </div>
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-higher-level-teaching-assistant-field" name="profile[roles]" type="checkbox" value="HLTA (higher level teaching assistant)"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-higher-level-teaching-assistant-field">HLTA (higher level teaching assistant)</label>
            </div>
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-education-support-field" name="profile[roles]" type="checkbox" value="Learning support or cover supervisor<"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-education-support-field">Learning support or cover supervisor</label>
            </div>
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-sendco-field" name="profile[roles]" type="checkbox" value="SENDCo (special educational needs and disabilities coordinator)"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-sendco-field">SENDCo (special educational needs and disabilities coordinator)</label>
            </div>


              <div class="govuk-checkboxes__item">
                  <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-teaching-assistant-field" name="profile[roles]" type="checkbox" value="Administration, HR, data and finance"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-teaching-assistant-field">Administration, HR, data and finance</label>
              </div>
              <div class="govuk-checkboxes__item">
                  <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-higher-level-teaching-assistant-field" name="profile[roles]" type="checkbox" value="Catering, cleaning and site management"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-higher-level-teaching-assistant-field">Catering, cleaning and site management</label>
              </div>
              <div class="govuk-checkboxes__item">
                  <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-education-support-field" name="profile[roles]" type="checkbox" value="IT support"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-education-support-field">IT support</label>
              </div>
              <div class="govuk-checkboxes__item">
                  <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-sendco-field" name="profile[roles]" type="checkbox" value="Pastoral, health and welfare"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-sendco-field">Pastoral, health and welfare</label>
              </div>
              <div class="govuk-checkboxes__item">
                  <input class="govuk-checkboxes__input" id="jobseekers-subscription-form-job-roles-sendco-field" name="profile[roles]" type="checkbox" value="Other support roles"><label class="govuk-label govuk-checkboxes__label" for="jobseekers-subscription-form-job-roles-sendco-field">Other support roles</label>
              </div>
              

        </div>
        
        
        <button class="govuk-button govuk-!-margin-top-6" data-module="govuk-button">Save and continue</button>
        <p><a href="/profile">Cancel</a></p>

      </form>

    </div>
  </div>

{% endblock %}
