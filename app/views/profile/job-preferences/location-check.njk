{% extends "layout.njk" %}

{% set heading = 'Locations' %}
{% set caption = 'Job preferences' %}

{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

{% set htmlContent = "<h2 class=\"govuk-heading-m\">" + flash + "</h2>" %}
{% if 'alert' in flash %}
  {% set htmlContent = htmlContent + "<p>hello</p>" %}
{% endif %}


  {{ govukNotificationBanner({
    html: htmlContent,
    type: "success",
    icon: false
  }) if flash and flash.length }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">


      <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">
          {{caption}}
        </span>
        {{heading}}
      </h1>

       <h2 class="govuk-heading-m">Locations added</h2>

      <form action="/profile/job-preferences/location-check" method="post">

        <div class="app-list">

          <div class="app-list__item">

            {{appPageHeader({
              classes: 'govuk-!-margin-bottom-0',
              heading: {
                level: 2,
                text: "Location 1",
                classes: 'govuk-heading-s'
              },
              items: [{
                text: 'Change',
                href: "location",
                type: 'link'
              }, {
                text: 'Delete',
                href: "location-delete-last",
                type: 'link'
              }]
            })}}

            <p class="govuk-!-margin-bottom-0 govuk-!-margin-top0">London (10 miles)</p>

          </div>
          <div class="app-list__item">

            {{appPageHeader({
              classes: 'govuk-!-margin-bottom-0',
              heading: {
                level: 2,
                text: "Location 2",
                classes: 'govuk-heading-s'
              },
              items: [{
                text: 'Change',
                href: "location",
                type: 'link'
              }, {
                text: 'Delete',
                href: "location-delete",
                type: 'link'
              }]
            })}}

            <p class="govuk-!-margin-bottom-0 govuk-!-margin-top0">Nottingham (10 miles)</p>

          </div>
        </div>

        {{ govukRadios({
          idPrefix: "profile[addAnotherLocation]",
          name: "profile[addAnotherLocation]",
          fieldset: {
            legend: {
              text: "Do you want to add another location?",
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "Yes",
              text: "Yes"
            },
            {
              value: "No",
              text: "No"
            }
          ]
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}
      </form>
      <p><a href="#">Cancel</a></p>

    </div>
  </div>

{% endblock %}
