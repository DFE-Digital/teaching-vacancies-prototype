{% extends "layout.njk" %}

{% set heading = 'Locations' %}
{% set caption = 'Job preferences' %}

{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form method="post" novalidate>


        <span class="govuk-caption-xl">
          Delete location
        </span>

        <div class="govuk-form-group">

            <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl govuk-!-margin-bottom-5">
              <h1 class="govuk-fieldset__heading">
                Confirm that you want to delete Nottingham (10 miles)
              </h1>
            </legend>

            </div>
          </fieldset>

        {{ govukButton({
          text: "Delete the location"
        }) }}

        <p><a href="/profile">Cancel</a></p>
      </form>
    </div>


    </div>
  </div>

{% endblock %}
