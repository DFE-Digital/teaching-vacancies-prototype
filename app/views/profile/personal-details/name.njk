
{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-l">
        Personal details
      </span>
      <h1 class="govuk-heading-l">
        Name
      </h1>

      <form method="post" id="name-form" novalidate>

        {{ govukInput({
          id: "profile[firstName]",
          name: "profile[firstName]",
          label: {
            text: "First name",
            classes: 'govuk-label--m'
          },
          hint: {
            text: "Or given names"
          },
          value: firstName
        }) }}

        {{ govukInput({
          id: "profile[lastName]",
          name: "profile[lastName]",
          label: {
            text: "Last name",
            classes: 'govuk-label--m'
          },
          hint: {
            text: "Or family name"
          },
          value: lastName
        }) }}


        <button class="govuk-button" data-module="govuk-button" id="formButton" tabindex="-1" onclick="return foo();">
          Save and continue
        </button>

        <p><a href="/profile">Cancel</a></p>
      </form>

    </div>
  </div>

{% endblock %}
