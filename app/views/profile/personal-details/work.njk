{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% set title = 'Do you need Skilled worker visa sponsorship?' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-l">
        Personal details
      </span>
      {% set h1 %}
        {{title}}
      {% endset %}


      <form method="post" novalidate>

        {% set hintCode %}
        
            <div id="right-to-work-hint" class="govuk-hint">
              You can <a target="_blank" href="https://getintoteaching.education.gov.uk/non-uk-teachers/visas-for-non-uk-teachers">find out what visa you need if you're a non-UK citizen (link opens in new tab)</a>.
            </div>
         
        {% endset %}

        {{ govukRadios({
          idPrefix: "profile[provideWork]",
          name: "profile[provideWork]",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            html: hintCode
          },
          items: [{
            value: options[0].value,
            text: options[0].text,
            checked: options[0].checked
          }, {
            value: options[1].value,
            text: options[1].text,
            checked: options[1].checked,
            conditional: {
              html: nocode
            }
          }]
        }) }}

        {{ govukButton({
          text: "Save and continue",
          id: "sponsorship_button",
          classes:"next-location-6"
        }) }}




        
        <p><a href="/profile">Cancel</a></p>

      </form>

    </div>
  </div>

{% endblock %}
