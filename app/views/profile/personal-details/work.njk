{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% set title = 'Do you need Skilled worker visa sponsorship?' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-l">
        Personal details
      </span>
      {% set h1 %}
        {{title}}
      {% endset %}


      <form method="post" id="work-form" novalidate>

        <div class="govuk-form-group">
			<fieldset aria-describedby="profile[provideWork]-hint" class="govuk-fieldset">
				<legend class="govuk-fieldset__legend govuk-fieldset__legend--l"></legend>
				<h1 tabindex="0" class="govuk-fieldset__heading"><legend class="govuk-fieldset__legend govuk-fieldset__legend--l">Do you need Skilled worker visa sponsorship?</legend></h1><legend class="govuk-fieldset__legend govuk-fieldset__legend--l"></legend>
				<div class="govuk-hint" id="profile[provideWork]-hint">
					<div class="govuk-hint" id="right-to-work-hint">
						You can <a href="https://getintoteaching.education.gov.uk/non-uk-teachers/visas-for-non-uk-teachers" target="_blank">find out what visa you need if you're a non-UK citizen (link opens in new tab)</a>.
					</div>
				</div>
				<div class="govuk-radios" data-module="govuk-radios">
					<div class="govuk-radios__item">
						<input class="govuk-radios__input" id="profile[provideWork]" name="profile[provideWork]" type="radio" value="No"> <label class="govuk-label govuk-radios__label" for="profile[provideWork]">No, I already have the right to work in the UK</label>
					</div>
					<div class="govuk-radios__item">
						<input class="govuk-radios__input" id="profile[provideWork]-2" name="profile[provideWork]" type="radio" value="Yes"> <label class="govuk-label govuk-radios__label" for="profile[provideWork]-2">Yes, I will need to apply for a visa giving me the right to work in the UK</label>
					</div>
				</div>
			</fieldset>
		</div>

        <button class="govuk-button next-location-6"  id="sponsorship_button" tabindex="-1">
          Save and continue
        </button>




        
        <p><a href="/profile">Cancel</a></p>

      </form>

    </div>
  </div>

{% endblock %}
