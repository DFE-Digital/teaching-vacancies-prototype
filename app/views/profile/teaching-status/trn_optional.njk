{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% set title = 'Do you have a Teacher reference number (TRN)?' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukErrorSummary({
        titleText: "Thereâ€™s a problem",
        errorList: errorList
      }) if errorList.length }}

      <span class="govuk-caption-l">
        Teaching status
      </span>
      {% set h1 %}
        {{title}}
      {% endset %}

      <form method="post" novalidate>

        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" aria-describedby="TRN-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        {{title}}
                    </h1>
                </legend>
                <div id="TRN-hint" class="govuk-hint">
                    If you are a trainee teacher can retrieve your TRN from the <a href="#">Find a Lost TRN</a> service before you get your QTS.
                </div>
                <div class="govuk-radios" data-module="govuk-radios">
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="TRN" name="TRN" type="radio" value="yes" data-aria-controls="conditional-TRN">
                        <label class="govuk-label govuk-radios__label" for="TRN">
                        Yes
                        </label>
                    </div>
                    <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-TRN">
                        <div class="govuk-form-group">
                            <label class="govuk-label govuk-label--s" for="profile[TRN]">Teacher reference number (TRN)</label> 
                            {% if errorList.length %} 
                                <p id="passport-issued-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> {{ errorList[0].text }}
                                </p>
                            {% endif %}
                            <input class="govuk-input govuk-input--width-20" id="profile[TRN]" name="profile[TRN]" type="text">
                        </div>
                    </div>
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="TRN-2" name="TRN" type="radio" value="no" data-aria-controls="conditional-TRN-2">
                        <label class="govuk-label govuk-radios__label" for="TRN-2">
                        No
                        </label>
                    </div>
                </div>
            </fieldset>
        </div>

        {{ govukButton({
          text: "Save and continue"
        }) }}

        <p><a href="/profile">Cancel</a></p>

      </form>

    </div>
  </div>

{% endblock %}
