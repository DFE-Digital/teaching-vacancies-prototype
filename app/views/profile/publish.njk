{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% set title = 'Profile status' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {# <h1 class="govuk-heading-xl">
        {{title}}
      </h1> #}

      {% set h1 %}
        <span class="govuk-caption-xl">
          Publish profile
        </span>
        {{title}}
      {% endset %}

      <form method="post" novalidate>
        {{ govukRadios({
          idPrefix: "profile[status]",
          name: "profile[status]",
          fieldset: {
            legend: {
              html: 'Job search status',
              html: title,
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--xl"
            }
          },
          items: options
        }) }}

        {{ govukWarningText({
          text: "When you publish your profile, schools will be able to find it.",
          iconFallbackText: "Fallback text"
        }) }}

        {{ govukButton({
          text: "Publish profile"
        }) }}

        <p><a href="/profile">Cancel</a></p>

      </form>

    </div>
  </div>

{% endblock %}
