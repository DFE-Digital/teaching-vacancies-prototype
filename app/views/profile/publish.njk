{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% set title = 'Set up job search status and publish profile' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">
        {{title}}
      </h1>

      <form method="post" novalidate>
        {{ govukRadios({
          idPrefix: "profile[status]",
          name: "profile[status]",
          fieldset: {
            legend: {
              html: 'Job search status',
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: options
        }) }}


        {{ govukWarningText({
          text: "When you publish your profile, schools will be able to find it.",
          iconFallbackText: "Fallback text"
        }) }}

        {{ govukButton({
          text: "Publish profile"
        }) }}

        <p><a href="/profile">Cancel</a></p>

      </form>

    </div>
  </div>

{% endblock %}
