
{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% set title = 'Confirm that you want to delete the reference' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-xl">
        Delete reference
      </span>
      <h1 class="govuk-heading-xl">
        {{title}}
      </h1>

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Name"
            },
            value: {
              text: reference.referenceName
            }
          },
          {
            key: {
              text: "Title"
            },
            value: {
              text: reference.referenceTitle
            }
          },
          {
            key: {
              text: "Organisation"
            },
            value: {
              text: reference.referenceOrganisation
            }
          },
          {
            key: {
              text: "Email address"
            },
            value: {
              text: reference.referenceEmail
            }
          },
          {
            key: {
              text: "Phone number"
            },
            value: {
              text: reference.referenceNumber
            }
          } if reference.referenceNumber
        ]
      }) }}

      <form method="post" novalidate>

        {{ govukButton({
          text: "Delete reference"
        }) }}

        <p><a href="/profile">Cancel</a></p>
      </form>

    </div>
  </div>

{% endblock %}
