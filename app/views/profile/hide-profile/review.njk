{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% if user.profile.hiddenPlaces | length %}
  {% set question = 'Do you want to add another school?' %}
{% else %}
  {% set question = 'Do you want to add a school?' %}
{% endif %}


{% set title = 'Hide profile from schools' %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "/profile"
  }) }}
{% endblock %}

{% block content %}

  {{ govukNotificationBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flash+"</h2>",
    type: "success",
    icon: false
  }) if flash and flash.length }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">
        {{title}}
      </h1>

      {% if user.profile.hiddenPlaces | length %}

      <h2 class="govuk-heading-m">
        Schools added
      </h2>

        <div class="app-list">

          {% for id, hiddenPlace in profile.hiddenPlaces %}
            <div class="app-list__item">

              {{appPageHeader({
                classes: 'govuk-!-margin-bottom-0',
                heading: {
                  level: 2,
                  text: hiddenPlace.hiddenPlace,
                  classes: 'govuk-heading-s'
                },
                items: [ {
                  text: 'Delete',
                  href: "/profile/hide-profile/"+id+"/delete",
                  visuallyHiddenText: hiddenPlace.hiddenPlace,
                  type: 'link'
                }]
              })}}

            </div>
          {% endfor %}
        </div>

      {% endif %}

      <form method="post" novalidate>

        {{ govukRadios({
          name: "more-schools",
          fieldset: {
            legend: {
              text: question,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "yes",
              text: "Yes"
            },
            {
              value: "no",
              text: "No"
            }
          ]
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}

      </form>

    </div>
  </div>

{% endblock %}
