
{% extends "layout.njk" %}

{% set primaryNavId = 'profile' %}

{% if 'School' in hiddenPlace.hiddenPlace %}
  {% set typeofPlace = 'school' %}
{% else %}
{% set typeofPlace = 'organisation' %}
{% endif %}

{% if organisation.website != 'Not entered' %}
  {% set website %}
    <a href="{{organisation.website}}">{{organisation.website}} (opens in new tab)</a>
  {% endset %}
{% endif %}

{% block beforeContent %}
   {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-xl">
        Delete {{typeofPlace}}
      </span>

      <h1 class="govuk-heading-xl">
        Confirm that you want to delete this {{typeofPlace}}
      </h1>

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "School"
            },
            value: {
              text: hiddenPlace.hiddenPlace
            }
          }
        ]
      }) }}

      <form method="post" novalidate>

        {{ govukButton({
          text: "Delete " + typeofPlace
        }) }}

        <p><a href="/profile">Cancel</a></p>
      </form>

    </div>
  </div>

{% endblock %}
